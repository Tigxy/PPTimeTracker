<Window x:Class="PPTime.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PPTime"
        mc:Ignorable="d"
        Title="PowerPoint Time Tracker" Height="600" Width="800"
        MinHeight="400" MinWidth="600" Icon="/stopwatch_black.png">
    <Window.Resources>
        <local:MillisecondsToTimeConverter x:Key="MillisecondsToTimeConverter"/>
        <local:ValueToColorConverter x:Key="ValueToColorConverter"/>
    </Window.Resources>
    <Grid Margin="25">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <StackPanel Grid.Row="0">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <TextBox Text="{Binding PresentationName, Mode=OneWay, FallbackValue='no presentation selected' }" FontSize="20"
                         VerticalAlignment="Stretch" HorizontalAlignment="Stretch" VerticalContentAlignment="Center" Padding="5 0"
                         />

                <Button Grid.Column="1" Name="btnSelectFile" VerticalAlignment="Center" HorizontalAlignment="Center" FontFamily="Segoe MDL2 Assets" Content="&#xE8E5;" 
                    FontSize="30" Background="White" Padding="10" Click="btnSelectFile_Click"/>

                <Button Grid.Column="2" Name="btnRefresh" VerticalAlignment="Center" HorizontalAlignment="Center" FontFamily="Segoe MDL2 Assets" Content="&#xE72C;" 
                    FontSize="30" Background="White" Padding="10" Click="btnRefresh_Click"/>
            </Grid>
            

            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0 10 0 10">
                <TextBlock FontSize="20" Text="Gesamtdauer:" Margin="0 0 5 0"/>
                <TextBlock FontSize="20" 
                           Text="{Binding TotalDuration, Converter={StaticResource MillisecondsToTimeConverter}}"
                           Foreground="{Binding AnyValueNotFound, FallbackValue=Black, Converter={StaticResource ValueToColorConverter}}"                           
                           />
            </StackPanel>
        </StackPanel>

        <ListView ItemsSource="{Binding Slides}" HorizontalAlignment="Stretch" HorizontalContentAlignment="Center"
                  ScrollViewer.CanContentScroll="False" Padding="20 10" Grid.Row="1" ScrollViewer.VerticalScrollBarVisibility="Auto"
                  ScrollViewer.HorizontalScrollBarVisibility="Disabled">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <local:SlideUserControl Height="120" Width="100" Margin="0 5"/>
                </DataTemplate>
            </ListView.ItemTemplate>
            <ListView.ItemsPanel>
                <ItemsPanelTemplate>
                    <!--<VirtualizingStackPanel Orientation="Horizontal"></VirtualizingStackPanel>-->
                    <WrapPanel Width="{Binding RelativeSource={RelativeSource AncestorType=ItemContainerTemplate}, Path=ActualWidth}"/>
                </ItemsPanelTemplate>
            </ListView.ItemsPanel>
        </ListView>

        <StackPanel Grid.Row="2" HorizontalAlignment="Right" VerticalAlignment="Bottom" Margin="0 8 0 0">
            <TextBlock FontSize="12" Text="© Christian Ganhör" HorizontalAlignment="Right"/>
            <!--<TextBlock FontSize="10" Text="App Icon from freepik.com" HorizontalAlignment="Right"/>-->
            <!--<TextBlock FontSize="10" HorizontalAlignment="Right">
                App Icon from
                <Hyperlink NavigateUri="https://www.freepik.com" RequestNavigate="Hyperlink_RequestNavigate">
                    freepik.com
                </Hyperlink>
            </TextBlock>-->
        </StackPanel>
    </Grid>
</Window>
